<h2>Sign up</h2>
<div class="row">
  
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] == '2' %>
      <h1 class="text-center">Pro Account</h1>
      <p class="text-center">Sign up for pro and get all access to the community.</p>
    <% else %>
      <h1 class="text-center">Basic Account</h1>
      <p class="text-center">Sign up for free and get basic access to the community.</p>
    <% end %>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <div class = "well">
      
      <% if params[:plan] == '1' %>
        <%= render "basic_form" %>
      <% else %>
        <%= render "pro_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>>
</div>